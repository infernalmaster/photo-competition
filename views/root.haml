    .form.take-part__step.js-take-part__step
      %form.js-profile-form{action: '/save_profile', method: 'post'}

        %fieldset>
          %legend ОБОВ’ЯЗКВО ДЛЯ ЗАПОВНЕННЯ

          .inputfield
            %span Ім’я
            %input{type: "text", name: "name", class: "validate[required]"}
          .inputfield
            %span Прізвище
            %input{type: "text", name: "surname", class: "validate[required]"}
          .inputfield
            %span Адреса
            %input{type: "text", name: "address", class: "validate[required]"}
          .inputfield
            %span Телефон
            %input{type: "text", name: "phone", class: "validate[required]"}
          .inputfield
            %span E-mail
            %input{type: "email", name: "email", class: "validate[required,custom[email]]"}

        %fieldset
          %legend ДОДАТКОВО
          .inputfield
            %span Веб сайт
            %input{type: "text", name: "site"}
          .inputfield
            %span Приналежність до фотооб’єднання
            %input{type: "text", name: "photo_alliance"}
          .inputfield
            %span Посада
            %input{type: "text", name: "position"}

        .inputfield
          %input{type: "submit", value: "submit"}
      %button.btn.btn--back.js-back-from-profile Назад
      %button.btn.btn--forward.btn--forward-short.js-send-profile Продовжити

    .upload.take-part__step.js-take-part__step
      %form.js-images-form{action: '/upload', method: 'post', enctype: "multipart/form-data"}
        .uploadwrap
          %p Тільки *.JPEG без стискання з наступними параметрами:8 BIT; RGB; 300 dpi; мінімум 2400 px по довшій стороні.Не допускаєтся оформлення у вигляді полів,псевдопаспарту, рамок, тощо. Максимум 5 фото.

          - 5.times do |i|
            .uploadform
              %input{name: "image#{i}", type: "file", accept: "image/jpeg"}
              .prewiev
                %img{alt: "", src: "/images/upload.png"}
                %span НАТИСНІТЬ ЩОБ ВИБРАТИ ФОТО З ЖОРСТКОГО ДИСКУ
              .inputfield
                %span Назва
                %input{name: "title#{i}", type: "text"}

      .clear

      %button.btn.btn--back.js-back-from-photos Назад
      %button.btn.btn--forward.btn--forward-short.js-send-photos Продовжити


